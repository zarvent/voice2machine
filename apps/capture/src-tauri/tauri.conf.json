{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Capture",
  "version": "0.1.0",
  "identifier": "com.voice2machine.capture",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "trayIcon": {
      "iconPath": "icons/icon-idle.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Capture - Configuraci√≥n",
        "width": 450,
        "height": 550,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"]
      }
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  }
}
