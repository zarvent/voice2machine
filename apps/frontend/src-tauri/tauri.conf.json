{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "voice2machine",
  "version": "0.1.0",
  "identifier": "com.voice2machine.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "voice2machine",
        "width": 420,
        "height": 640
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../../scripts/v2m-daemon.sh"
    ],
    "resources": [
      "../../scripts/v2m-daemon.sh"
    ]
  }
}
